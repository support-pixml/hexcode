<form action="{{ action }}" method="POST" class="form-horizontal" id="paytm_form_redirect">
	{% for k, v in paytm_fields %}
	<input type="hidden" name="{{ k }}" value="{{ v }}" />
	{% endfor %}
	<div class="buttons">
		<div class="pull-right">
			<input type="submit" value="{{ button_confirm }}" id="button-confirm" class="btn btn-primary" />
		</div>
	</div>
</form>